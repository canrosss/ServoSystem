    <% end %>
  </ul>
<% end %>
<%= form_for @product do |f| %>
  <p>
    <%= f.label :name %>
    </br>
    <%= f.text_field :name %>
  </p>
    <%= f.label :description %>
    </br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
