<% if @product.errors.any? %>
  <h2>Revisa la longuitud, no debe ser muy corta </h2>
  <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li>
        <%= msg %>
      </li>
    <% end %>
  </ul>
    <% end %>

    <%= form_for @product do |f| %>
      <p>
        <%= f.label :name %><br/>
      </p>
      <p>
        <%= f.text_field :name %><br/>
      </p>
      <p>
        <%= f.label :description %><br/>
      </p>
      <p>
        <%= f.text_area :description %><br/>
      </p>
      <p>
         <%= f.submit %>
      </p>
    <% end %>

    <%= link_to "Volver a la lista de productos", products_path %>
